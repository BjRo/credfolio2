# Environment Selection
# Controls which database is used: credfolio_dev or credfolio_test
# Valid values: dev, test
CREDFOLIO_ENV=dev

# PostgreSQL Configuration
# Use container name when running from devcontainer, localhost from host
POSTGRES_HOST=credfolio2-postgres
POSTGRES_USER=credfolio
POSTGRES_PASSWORD=credfolio_dev
POSTGRES_PORT=5432
POSTGRES_SSLMODE=disable

# MinIO Configuration
# Use container name when running from devcontainer, localhost from host
MINIO_ENDPOINT=credfolio2-minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# LLM Provider Configuration
# Which provider to use: "anthropic" or "openai"
LLM_PROVIDER=anthropic

# Model for resume data extraction (format: "provider/model")
# RESUME_EXTRACTION_MODEL=openai/gpt-4o

# API Keys (at least one required for LLM features)
# ANTHROPIC_API_KEY=sk-ant-...
# OPEN_AI_API_KEY=sk-...

# Braintrust Observability (Optional)
# Get your key from: https://www.braintrust.dev/app/settings
# BRAINTRUST_API_KEY=
# BRAINTRUST_PROJECT=credfolio
