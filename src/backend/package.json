{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "go run cmd/server/main.go",
    "build": "go build -o bin/server cmd/server/main.go",
    "test": "go test ./...",
    "test:coverage": "go test -cover ./...",
    "test:verbose": "go test -v ./...",
    "lint": "PATH=$PATH:$(go env GOPATH)/bin golangci-lint run ./...",
    "lint:fix": "PATH=$PATH:$(go env GOPATH)/bin golangci-lint run --fix ./...",
    "clean": "rm -rf bin"
  }
}
