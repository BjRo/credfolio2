{
  "permissions": {
    "allow": [
      "Write(*)",
      "Edit(*)",
      "Bash(git *)",
      "Bash(pnpm *)",
      "Bash(go *)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-commit-check.sh"
          }
        ]
      }
    ]
  }
}
